  },
  "homepage": "https://github.com/eldoy/cm6#readme",
  "devDependencies": {
    "waveorb": "^0.39.0",
    "concurrently": "^8.2.0",
    "sass": "^1.66.0",
    "codemirror": "^6.0.1",
    "@codemirror/lang-javascript": "^6.1.9",
    "rollup": "^3.28.0",
    "@rollup/plugin-node-resolve": "^15.2.0"
  }
}
